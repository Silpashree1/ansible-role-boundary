[Unit]
Description="HashiCorp Boundary Controller - Access any system from anywhere based on user identity"

[Service]
ExecStart={{ boundary_install_directory }}/boundary dev -login-name=jack -password=password1 
User={{ boundary_user }}
Group={{ boundary_group }}
LimitMEMLOCK=infinity
AmbientCapabilities=CAP_IPC_LOCK+ep
CapabilityBoundingSet=CAP_SYSLOG CAP_IPC_LOCK

[Install]
WantedBy=multi-user.target
